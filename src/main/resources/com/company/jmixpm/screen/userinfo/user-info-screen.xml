<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://userInfoScreen.caption">
    <data>
        <instance id="userInfoDc"
                  class="com.company.jmixpm.entity.UserInfo">
            <loader id="userInfoDl"/>
        </instance>
    </data>
    <actions>
        <action id="windowClose"
                caption="Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <form dataContainer="userInfoDc" editable="false">
            <column width="400px">
                <textField property="name"/>
                <textField property="email"/>
                <textField property="phone"/>
                <textField property="website"/>
                <button id="closeBtn" width="AUTO" caption="Close" action="windowClose"/>
            </column>
        </form>
    </layout>
</window>